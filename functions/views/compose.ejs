<%- include("partials/header") -%>

<body class="beige-theme">
  <div class="outer-circle">
    <span class="circle beige"></span>
  </div>

  <%- include("partials/navbar") -%>



  <!-- Arrival Section -->
  <div class="dark">
    <div class="container-fluid">
      <div class="header">
        <h1 class="header-title">Compose your next article!</h1>
        <p class="header-paragraph">Signed by Benjamin Lefebvre</p>
      </div>
    </div>
  </div>

  <div class="light">
    <div class="container-fluid">
      <div class="section">
        <form action="/compose" method="post">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="title">
            </div>
            <div class="form-group">
                <label for="post">Post</label>
            <textarea class="form-control" name="post" rows="5"></textarea>
            </div>
            
    
            <button class="btn btn-primary" type="submit" name="btnPublish">Publish</button>
        </form>
      </div>
    </div>
  </div>


  <%- include("partials/contactSection") -%>
  <%- include("partials/footer") -%>
