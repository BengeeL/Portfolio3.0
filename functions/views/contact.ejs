<%- include("partials/header") -%>

<body class="red-theme dark">
  <%- include("partials/navbar") -%>

  <!-- Contact Section  -->
  <div class="dark contact-form">
    <div class="container-fluid">
      <div class="section">
        <h2>Hit me up!</h2>
        <p>I will get back to you within 48 hours!</p>

        <form id="contact-form">
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <label for="fname">First Name*</label>
                <input
                  type="text"
                  class="form-control"
                  id="fname"
                  placeholder="First name"
                  required="required"
                />
              </div>
              <div class="col-md-6">
                <label for="lname">Last Name*</label>
                <input
                  type="text"
                  class="form-control"
                  id="lname"
                  placeholder="Last name"
                  required="required"
                />
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="email">Email address*</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="name@example.com"
              required="required"
            />
          </div>

          <div class="form-group">
            <label for="subject">Subject*</label>
            <input
              type="text"
              class="form-control"
              id="subject"
              placeholder="e.g. Job Offert"
              required="required"
            />
          </div>

          <div class="form-group">
            <label for="message">Message*</label>
            <textarea
              class="form-control"
              id="message"
              rows="3"
              required="required"
            ></textarea>
          </div>

          <p id="result" class="contact-result">wdwdwef</p>

          <input
            class="btn btn-lg btn-light"
            type="submit"
            id="submit"
            value="Send"
          />
          <input
            class="btn btn-lg btn-light"
            type="reset"
            id="reset"
            value="Clear"
          />
        </form>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="js/app.js"></script>
  <%- include("partials/footer") -%>
</body>
