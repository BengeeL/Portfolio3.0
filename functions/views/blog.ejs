<%- include("partials/header") -%>

<body class="beige-theme">
  <img class="bubble" src="images/beigeThemeCircle.png">

  <%- include("partials/navbar") -%>



  <!-- Arrival Section -->
  <div class="dark">
    <div class="container-fluid">
      <div class="header">
        <h1 class="header-title">Blog</h1>
        <p class="header-paragraph">Follow my adventure!</p>
      </div>
    </div>
  </div>

  <div class="light">
    <div class="container-fluid">
      <div class="section">
        <% postsList.forEach(post => { %>
          <h2><%= post.title %></h2>
          <p><%- post.content.substring(0,300) + " ..." %>
            <a href="/blog/post/<%= post._id %>">Read More</a>
          </p>
        <% }); %>
      </div>
    </div>
  </div>


  <%- include("partials/contactSection") -%>
  <%- include("partials/footer") -%>
